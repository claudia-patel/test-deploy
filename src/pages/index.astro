    role: "Primary User",
    phone: "+1 (314) 537-1024",
    email: "harshpravinpatel@gmail.com",
    imessage: true,
    notes: "Co-owner of this OpenClaw instance. Husband of Monika."
  },
  {
    name: "Monika Patel",
    relationship: "family",
    role: "Primary User",
    phone: "+1 (262) 290-1968",
    email: "mnarayen@gmail.com",
    imessage: true,
