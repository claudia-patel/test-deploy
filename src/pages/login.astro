---
const error = Astro.url.searchParams.has('error');
---
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Claudia - Login</title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
      background: #0a0a0a;
      color: #e0e0e0;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
    }
    .login-card {
      background: #1a1a2e;
      border: 1px solid #2a2a3e;
      border-radius: 12px;
      padding: 2.5rem;
      width: 100%;
      max-width: 360px;
      text-align: center;
    }
    h1 { font-size: 1.5rem; color: #fff; margin-bottom: 0.25rem; }
    .subtitle { color: #666; font-size: 0.85rem; margin-bottom: 2rem; }
    .error {
      background: #2e1a1a;
      border: 1px solid #4a2020;
      color: #f87171;
      font-size: 0.8rem;
      padding: 0.5rem;
      border-radius: 6px;
      margin-bottom: 1rem;
    }
    input[type="password"] {
      width: 100%;
      padding: 0.75rem 1rem;
      background: #111;
      border: 1px solid #333;
      border-radius: 8px;
      color: #fff;
      font-size: 1rem;
      margin-bottom: 1rem;
      outline: none;
      transition: border-color 0.2s;
    }
    input[type="password"]:focus { border-color: #818cf8; }
    input[type="password"]::placeholder { color: #555; }
    button {
      width: 100%;
      padding: 0.75rem;
      background: #818cf8;
      color: #fff;
      border: none;
      border-radius: 8px;
      font-size: 0.95rem;
      font-weight: 600;
      cursor: pointer;
      transition: background 0.2s;
    }
    button:hover { background: #6366f1; }
  </style>
</head>
<body>
  <div class="login-card">
    <h1>Claudia</h1>
    <p class="subtitle">Enter password to continue</p>
    {error && <div class="error">Wrong password, try again.</div>}
    <form method="POST" action="/auth">
      <input type="password" name="password" placeholder="Password" autofocus />
      <button type="submit">Enter</button>
    </form>
  </div>
</body>
</html>
